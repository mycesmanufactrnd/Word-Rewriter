{
  "manifest_version": 3,
  "name": "Word Auto Rewriter",
  "version": "1.0",
  "description": "Automatically rewrite words to synonyms or create typos for pranks.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "WARLogo.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["synonyms.json"],
      "matches": ["<all_urls>"]
    }
  ]
}